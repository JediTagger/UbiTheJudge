@model IEnumerable<UbiTheJudge.Models.UserScore>

@{
    ViewBag.Title = "ViewScores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ViewScores</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SongId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UbiUserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SongId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UbiUserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.key }) |
            @Html.ActionLink("Details", "Details", new { id=item.key }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.key })
        </td>
    </tr>
}

</table>
